@using Microsoft.AspNetCore.Identity
@inject SignInManager<OWNUser> SignInManager
@inject UserManager<OWNUser> UserManager
@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="ml-auto">
        <ul class="c-header-nav ml-auto">
            <li class="c-header-nav-item">
                <a class="c-header-nav-link" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">登入者:@UserManager.GetUserName(User)!</a>
            </li>
            <li class="c-header-nav-item">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">登出</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="c-header-nav ml-auto">
        <li class="c-header-nav-item">
            <a class="c-header-nav-link" asp-area="" asp-controller="Account" asp-action="Register">註冊</a>
        </li>
        <li class="c-header-nav-item">
            <a class="c-header-nav-link" asp-area="" asp-controller="Account" asp-action="Login">登入</a>
        </li>
    </ul>
}